<div class="container-fluid py-4">
    <!-- Assignments Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="h4 fw-bold text-primary mt-5">
                <i class="fas fa-tasks me-2"></i>Uploaded Assignments
            </h2>
        </div>
    </div>
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <% if (assignments && assignments.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Subject</th>
                                <th>Deadline</th>
                                <th>Questions</th>
                                <th>Submissions</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% assignments.forEach(assignment => { %>
                                <tr>
                                    <td><%= assignment.title %></td>
                                    <td><%= assignment.subject_name %></td>
                                    <td>
                                        <% if (assignment.deadline) { %>
                                            <span class="text-<%= new Date(assignment.deadline) < new Date() ? 'danger' : 'success' %>">
                                                <%= new Date(assignment.deadline).toLocaleDateString() %>
                                            </span>
                                        <% } else { %>
                                            <span class="text-muted">No deadline</span>
                                        <% } %>
                                    </td>
                                    <td><span class="badge bg-secondary"><%= assignment.question_count %></span></td>
                                    <td><span class="badge bg-success"><%= assignment.submission_count %></span></td>
                                    <td>
                                        <a href="/teacher/assignments/<%= assignment.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View Submissions
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-4">
                    <i class="fas fa-tasks fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No Assignments Uploaded</h5>
                </div>
            <% } %>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 fw-bold text-primary">
                <i class="fas fa-users me-2"></i>Students
            </h1>
            <p class="text-muted">View and manage your students</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <% if (students && students.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Class</th>
                                <th>Status</th>
                                <th>Assignments</th>
                                <th>Avg Score</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach(student => { %>
                                <tr>
                                    <td>
                                        <div class="fw-semibold"><%= student.name %></div>
                                    </td>
                                    <td><%= student.email %></td>
                                    <td><%= student.class_name %></td>
                                    <td>
                                        <span class="badge bg-<%= student.active ? 'success' : 'secondary' %>">
                                            <%= student.active ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info"><%= student.assignment_count || 0 %></span>
                                    </td>
                                    <td>
                                        <% if (student.avg_score !== undefined && student.assignment_count > 0) { %>
                                            <span class="text-<%= student.avg_score >= 70 ? 'success' : student.avg_score >= 50 ? 'warning' : 'danger' %>">
                                                <%= Math.round(student.avg_score) %>%
                                            </span>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/teacher/students/<%= student.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-users fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No Students Found</h5>
                    <p class="text-muted">There are no students to display for your classes.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
